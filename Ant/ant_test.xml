<project name="simpleCompile" default="compile">
   
   <target name="init">
    <property name="sourceDir" value="${sourceDir}" />
	   <!-- <property name="sourceDir" value="D:\Java\Test Proj" /> -->
      <property name="outputDir" value="D:\Java\classes" />
   </target>
   
   <target name="clean" depends="init">
      <deltree dir="${outputDir}" />
   </target>
   
   <target name="prepare" depends="clean">
      <mkdir dir="${outputDir}" />
   </target>
   
   <target name="compile" depends="prepare">
     <javac srcdir="${sourceDir}" destdir="${outputDir}" />
   </target>
   
